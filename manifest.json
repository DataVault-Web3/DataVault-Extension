{
  "manifest_version": 3,
  "name": "extension-order-history",
  "version": "1.0",
  "description": "Consent-based Amazon order history sharing extension",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://amazon.in/*",
    "*://*.amazon.in/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://amazon.in/*",
        "*://*.amazon.in/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Order History Extension",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}